---
parser: babel-eslint

env:
  node: true

# these are taken from the .eslintrc file at https://github.com/facebook/react
rules:
  space-before-blocks: 2
  indent: [2, 2, indentSwitchCase: true]
  brace-style: 2
  space-after-keywords: 2
  strict: 2

  no-unused-expressions: 2
  eol-last: 2
  dot-notation: 2
  dot-location: [2, property]
  consistent-return: 2
  no-unused-vars: [0]
  quotes: [2, single, avoid-escape]
  no-shadow: 2
  no-multi-spaces: 2

  no-underscore-dangle: 0
  new-cap: 0
  no-use-before-define: 0
  key-spacing: 0
  no-empty: 0
  no-undef-init: 0
